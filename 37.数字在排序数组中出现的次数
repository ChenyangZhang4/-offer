数字在排序数组中出现的次数
统计一个数字在排序数组中出现的次数。

int GetNumberOfK(vector<int> data ,int k) {
    int index=-1;
    int low=0, high=data.size()-1;
    int mid=0;
    int counts=0;
    while(low<=high && index==-1){
        mid=(low+high)/2;
        if(data[mid]==k)
            index=mid;
        else if(data[mid]>k)
            high=mid-1;
        else
            low=mid+1;
    }
    if(index==-1)
        return 0;
    int i=index;
    while(i>=0 && data[i]==k){
            counts++;
            i--;
    }
    i=index+1;
    while(i<data.size() && data[i]==k){
            counts++;
            i++;
    }
    return counts;
}

//巧方法
int GetNumberOfK(vector<int> data ,int k) {
    return biSearch(data, k+0.5) - biSearch(data, k-0.5) ;
}
int biSearch(const vector<int> & data, double num){
    int s = 0, e = data.size()-1;     
    while(s <= e){
        int mid = (e - s)/2 + s;
        if(data[mid] < num)
            s = mid + 1;
        else if(data[mid] > num)
            e = mid - 1;
    }
    return s;
}
